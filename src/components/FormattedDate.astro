---
export interface Props {
	date: Date;
  isFull?: boolean;
}
const { date, isFull } = Astro.props;
---

<time class="px-2 font-mono text-gray-500" datetime={date.toISOString()}>
	{
		!isFull ? date.toLocaleDateString('fr-fr', {
			year: 'numeric',
		}) : date.toLocaleDateString('en-us', {
			year: 'numeric',
      month: 'short',
      day: 'numeric',
		})
	}
</time>
