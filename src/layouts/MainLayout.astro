---
import BaseHead from '~/components/BaseHead.astro';
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '~/consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script defer data-domain="blog.jorgeadolfo.com" src="https://a.jorgeadolfo.com/script.js"></script>
	</head>
	<body class="bg-white dark:bg-gray-800 dark:text-gray-300">
    <Header title={SITE_TITLE} />
    <div class="container max-w-2xl flex flex-col gap-4 mx-auto main flex-1">
      <main class="flex flex-col gap-4 flex-1">
        <slot /> 
      </main>
      <Footer />
    </div>
	</body>
</html>
<style is:global>
body {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.main {
  margin-top: 82px;
}
</style>
